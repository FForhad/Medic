<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".NeurologyActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".Cardiology">

        <TextView
            android:id="@+id/image1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="20dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="72dp"
            android:layout_marginBottom="20dp"
            android:padding="20dp"
            android:text="Neurology :"
            android:textColor="#0AF329"
            android:textSize="30dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/image2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/image1"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="20dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="20dp"
            android:layout_marginBottom="20dp"
            android:background="@drawable/button_bg"
            android:scaleType="centerCrop"
            android:text=" Prof. Dr. Anisul Haque\n Address:House#16,Road#2\n Dhanmondi,Dhaka-1205\n Phone:+8809613787801"
            android:textColor="#100E0F"
            android:textSize="21dp" />

        <TextView
            android:id="@+id/image3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/btncall"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="20dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="20dp"
            android:layout_marginBottom="20dp"
            android:background="@drawable/button_bg"
            android:scaleType="centerCrop"
            android:text=" Prof. Dr. Abu Nasir Rizvi\n Address:167/B,Green Road,Dhanmondi\n Phone:+8801731956033"
            android:textColor="#100E0F"
            android:textSize="20dp" />

        <Button
            android:id="@+id/btncall"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/image2"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentEnd="true"
            android:layout_gravity="center"
            android:layout_marginStart="100dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="100dp"
            android:layout_marginBottom="20dp"
            android:background="@drawable/button_bg"
            android:gravity="center"
            android:text="Call Now"
            android:textColor="#E8CB0F"
            android:textSize="20dp"
            android:textStyle="bold" />
        <Button
            android:id="@+id/btncall1"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/image3"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentEnd="true"
            android:layout_gravity="center"
            android:layout_marginStart="100dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="100dp"
            android:layout_marginBottom="20dp"
            android:background="@drawable/button_bg"
            android:gravity="center"
            android:text="Call Now"
            android:textColor="#E8CB0F"
            android:textSize="20dp"
            android:textStyle="bold" />
    </RelativeLayout>

</ScrollView>