<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PsychiatristActivity">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".Cardiology">

        <TextView
            android:id="@+id/image1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="20dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="72dp"
            android:layout_marginBottom="20dp"
            android:padding="20dp"
            android:text="Psychiatrist :"
            android:textColor="#0AF329"
            android:textSize="30dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/image2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/image1"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="20dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="20dp"
            android:layout_marginBottom="20dp"
            android:background="@drawable/button_bg"
            android:scaleType="centerCrop"
            android:text=" Professor Dr. Md. Enayet Karim\n Chamber :Hi Tech
Modern Psychiatric\n Hospital (Pvt.) Ltd.\n Phone:01730-351728"
            android:textColor="#100E0F"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/image3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/btncall"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="20dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="20dp"
            android:layout_marginBottom="20dp"
            android:background="@drawable/button_bg"
            android:scaleType="centerCrop"
            android:text=" Professor Dr. Md. Golam Rabbani\n Chamber:Medinova Medical Services \n Ltd\n Phone:+880286203536"
            android:textColor="#100E0F"
            android:textSize="20dp" />

        <Button
            android:id="@+id/btncall"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/image2"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentEnd="true"
            android:layout_gravity="center"
            android:layout_marginStart="100dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="100dp"
            android:layout_marginBottom="20dp"
            android:background="@drawable/button_bg"
            android:gravity="center"
            android:text="Call Now"
            android:textColor="#E8CB0F"
            android:textSize="20dp"
            android:textStyle="bold" />
        <Button
            android:id="@+id/btncall1"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/image3"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentEnd="true"
            android:layout_gravity="center"
            android:layout_marginStart="100dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="100dp"
            android:layout_marginBottom="20dp"
            android:background="@drawable/button_bg"
            android:gravity="center"
            android:text="Call Now"
            android:textColor="#E8CB0F"
            android:textSize="20dp"
            android:textStyle="bold" />
    </RelativeLayout>


</ScrollView>