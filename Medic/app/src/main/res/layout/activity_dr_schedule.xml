<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#AFEF65"
    tools:context=".DrScheduleActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">

        <TextView
            android:id="@+id/image1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="20dp"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="20dp"
            android:layout_marginBottom="20dp"
            android:padding="20dp"
            android:text="Doctors Directory"
            android:textColor="#050505"
            android:textSize="40dp"
            android:textStyle="bold" />


        <Button
            android:id="@+id/image2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/image1"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="20dp"
            android:layout_marginTop="40dp"
            android:layout_marginEnd="20dp"
            android:layout_marginBottom="20dp"
            android:background="@drawable/button_bg"
            android:scaleType="centerCrop"
            android:text="Cardiology"
            android:textSize="20sp" />

        <Button
            android:id="@+id/image3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/image2"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="20dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="20dp"
            android:layout_marginBottom="20dp"
            android:background="@drawable/button_bg"
            android:scaleType="centerCrop"
            android:text="Cardio Surgery"
            android:textSize="20sp" />
        <Button
            android:id="@+id/image4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/image3"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="20dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="20dp"
            android:layout_marginBottom="20dp"
            android:background="@drawable/button_bg"
            android:scaleType="centerCrop"
            android:text="Neophrologists Kindey Specialist"
            android:textSize="20sp" />

        <Button
            android:id="@+id/image5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/image4"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="20dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="20dp"
            android:layout_marginBottom="20dp"
            android:background="@drawable/button_bg"
            android:scaleType="centerCrop"
            android:text="Child Specialist"
            android:textSize="20sp" />

        <Button
            android:id="@+id/image6"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/image5"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="20dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="20dp"
            android:layout_marginBottom="20dp"
            android:background="@drawable/button_bg"
            android:scaleType="centerCrop"
            android:text="Neurology"
            android:textSize="20sp" />

        <Button
            android:id="@+id/image7"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/image6"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="20dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="20dp"
            android:layout_marginBottom="20dp"
            android:background="@drawable/button_bg"
            android:scaleType="centerCrop"
            android:text="Dentist"
            android:textSize="20sp" />

        <Button
            android:id="@+id/image8"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/image7"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="20dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="20dp"
            android:layout_marginBottom="20dp"
            android:background="@drawable/button_bg"
            android:scaleType="centerCrop"
            android:text="Psychiatrist"
            android:textSize="20sp" />

        <Button
            android:id="@+id/button16"
            android:layout_width="105dp"
            android:layout_height="38dp"
            android:layout_alignEnd="@+id/image1"
            android:layout_alignBottom="@+id/image1"
            android:layout_alignParentTop="true"
            android:layout_marginStart="-125dp"
            android:layout_marginTop="23dp"
            android:layout_marginEnd="20dp"
            android:layout_marginBottom="84dp"
            android:layout_toEndOf="@+id/image1"
            android:background="#FFC107"
            android:text="Back" />


    </RelativeLayout>
</ScrollView>